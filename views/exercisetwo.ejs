<div class="container mt-4">
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="card mb-3" >
                <div class="card-body">
                    <h2 class="text-center">Ejercicio 2</h2>
                </div>
            
                <form method="POST" href="/exerciseTwo">
                    <div class="row mt-2 mb-4 d-flex justify-content-center">
                        <div class="col-12 col-sm-12 col-md-4 form-group">
                            <input type="text" class="form-control" name="info" placeholder="Ingresar texto" required="required" >
                        </div>
                    </div>
                    <div class="row mb-5">
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-success mr-1 data-submit">Guardar</button>
                        </div>
                    </div>
                </form>


                <% if(typeof validations != 'undefined'){ %>
                    <% validations.map((validation) => {%>
                        <div class="alert alert-warning alert-dismissible fade show" role="alert">
                            <strong><%= validation.msg%></strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                   <%})%>
                <%}%>
            </div>
        </div>
    </div>
</div>